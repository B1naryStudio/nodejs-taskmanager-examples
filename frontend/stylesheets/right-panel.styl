#task-right-panel
	position: fixed
	width: 200px
	background-color: #D2D2D2
	height: 100%
	top: 40px
	right: 0px
	color: #626262
	padding-left: 10px
	
#users-modal
	position: absolute
	
#rp-menu
	margin-top: 10px
	margin-bottom: 10px
	
#users-modal-close
	display: inline-block
	float: right
	
#user-search
	display: inline-block

.user-item
	background: #FFF
	padding: 5px

.user-email
	display: inline-block

.user-abbreviation
	display: inline-block
	margin-right: 5px
	text-align: center
	font-size: 17px
	color: #666
	background-color: #C2C2C2
	text-transform: lowercase
	border-radius: 6px
	width: 28px
	height: 28px
	line-height: 28px
